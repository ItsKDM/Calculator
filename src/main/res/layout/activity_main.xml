<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/edText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_above="@id/edText1"
        android:layout_marginBottom="20dp"/>

        <TextView
        android:id="@+id/edText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edText1"
        android:text="7"
        android:textSize="16dp"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn7"
        android:layout_below="@id/edText1"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn8"
        android:layout_below="@id/edText1"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn9"
        android:layout_below="@id/edText1"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="16dp"
        android:background="@color/colorBtnBackground"
        android:layout_below="@id/btn7"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn4"
        android:layout_below="@id/btn8"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft= "6dp"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn5"
        android:layout_below="@id/btn9"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btnmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn6"
        android:layout_below="@id/btndiv"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16dp"
        android:background="@color/colorBtnBackground"
        android:layout_below="@id/btn4"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn1"
        android:layout_below="@id/btn5"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn2"
        android:layout_below="@id/btn6"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn3"
        android:layout_below="@id/btnmul"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="16dp"
        android:background="@color/colorBtnBackground"
        android:layout_below="@id/btn1"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btnClear"
        android:layout_below="@id/btn2"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btneql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="16dp"
        android:layout_toRightOf="@id/btn0"
        android:layout_below="@id/btn3"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="16dp"
        android:layout_toRightOf="@id/btneql"
        android:layout_below="@id/btnsub"
        android:background="@color/colorBtnBackground"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"/>

</RelativeLayout>